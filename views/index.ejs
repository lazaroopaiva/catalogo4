<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <title>My Anime</title>
</head>

<body>

    <nav>
        <ul>
            <li><img src="../img/mangekyou.png" alt=""></li>
            <li>
                <a href="/">
                    <h1>My Anime</h1>
                </a>
            </li>
            <li><a href="/cadastro">Cadastro</a> </li>
            <li><a href="#cards">Animes</a></li>
        </ul>
    </nav>

    <header>
        <img src="../img/banner.png" alt="banner">
    </header>


    <main>

        <section id='cards'>

            <h2>Lista de Animes</h2>

            <% animes.forEach((anime)=> { %>
                <div class="card">
                    <img src="<%= anime.imagem %>" alt="">
                    <h3>
                        <%= anime.nome %>
                    </h3>
                   
                    
                    <p>Genero: <%= anime.genero %>
                    </p>
                    <a id="editar" href="/editar/<%= anime.id %>">Editar</a>
                    <a id="apagar" href="/deletar/<%= anime.id %>">Apagar</a>
                    <a id="detalhes" href="/details/<%= anime.id%>"> Ver mais</a>
                </div>
                <% }) %>

        </section>

       



    </main>

    <footer>
        
        
    </footer>

</body>

</html>